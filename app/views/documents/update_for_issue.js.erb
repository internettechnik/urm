<%# reload video preview %>
<% pre= render(:partial => '/documents/preview', 
			:locals => {:document => o}
			) %>
$( "#<%=n %>_preview_<%=o.id%>" ).html("<%= escape_javascript( pre) %>");
// update the link (=source) entry for heuristic-issue-document:
$( "#<%=n %>_link_<%=o.id%>" ).html("<%= escape_javascript( link_to('follow link',o.source) ) %>");
<%# and clear ALL the upload file %>
$('input[type=file]').val("")

// we update the summary:
$("#summary_<%= n %>_<%= o.id %>" ).html("<%= escape_javascript(o.summary) %>");
$("#summary_<%=n%>s_of_issue_<%=issue.id%>").html(
	"<%=escape_javascript( alldocuments_summary_for_issue(issue) ) %>");


showToast("<%= escape_javascript( t(:'.updated', :summary => o.summary) ) %>");
resetHighlightingForElems('.edit_<%=n%>_<%=o.id%>');